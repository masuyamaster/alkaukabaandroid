<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/bg_background"
tools:context=".MainActivity"
android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp">

    <View
        android:id="@+id/viewHeaderBg"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/bg_header_gradient"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:text="AL-KAUKABA"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_settings"
        app:tint="@color/accent_yellow"
        app:layout_constraintBottom_toBottomOf="@id/tvAppTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvAppTitle" />

    <ImageView
        android:id="@+id/btnNotif"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_notification"
        app:tint="@color/accent_yellow"
        app:layout_constraintBottom_toBottomOf="@id/btnSettings"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:layout_constraintTop_toTopOf="@id/btnSettings" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPrayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/card_white"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvLabelUpcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upcoming Prayer"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_date_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_rounded"
                android:backgroundTint="#1A5A6B88"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="02 Jan 2024"
                android:textColor="@color/header_start"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPrayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Waktu Dzuhur"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLabelUpcoming" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Sudah lewat +33 menit yang lalu"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPrayerName" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#F1F5F9"
                app:layout_constraintTop_toBottomOf="@id/tvStatus" />

            <ImageView
                android:id="@+id/iconLoc"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:src="@android:drawable/ic_menu_mylocation"
                app:tint="@color/header_start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />

            <TextView
                android:id="@+id/textLoc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Sukodono, Kab. Sidoarjo - Indonesia"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/iconLoc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iconLoc"
                app:layout_constraintTop_toTopOf="@id/iconLoc" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/cardPrayer">

        <LinearLayout
            android:id="@+id/bt_Kiblat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_button"
                android:backgroundTint="@color/bg_teal_light"
                android:padding="14dp"
                android:src="@drawable/ic_menu_compass"
                app:tint="@color/icon_teal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Arah\nKiblat"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_sholat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_button"
                android:backgroundTint="@color/bg_purple_light"
                android:padding="14dp"
                android:src="@drawable/ic_menu_pray"
                app:tint="@color/icon_purple" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Waktu\nSholat"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_hisiyah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_button"
                android:backgroundTint="@color/bg_yellow_light"
                android:padding="14dp"
                android:src="@drawable/ic_menu_star"
                app:tint="@color/icon_yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Bulan\nHijriyah"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_gerhana"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_button"
                android:backgroundTint="@color/bg_blue_light"
                android:padding="14dp"
                android:src="@drawable/ic_menu_moon"
                app:tint="@color/icon_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Gerhana"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLabelCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Kalender"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutMenu" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_card_rounded"
        android:backgroundTint="@color/calendar_bg"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelCalendar">

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tvMonth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvMonth" />

        <LinearLayout
            android:id="@+id/rowDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvMonth">

            <TextView
                style="@style/CalendarDayText"
                android:text="M" />
            <TextView
                style="@style/CalendarDayText"
                android:text="S" />
            <TextView
                style="@style/CalendarDayText"
                android:text="S" />
            <TextView
                style="@style/CalendarDayText"
                android:text="R" />
            <TextView
                style="@style/CalendarDayText"
                android:text="K" />
            <TextView
                style="@style/CalendarDayText"
                android:text="J" />
            <TextView
                style="@style/CalendarDayText"
                android:text="S" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/rowDays">

            <LinearLayout style="@style/CalendarDateContainer">
                <TextView style="@style/CalendarDateNum" android:text="01" />
                <TextView style="@style/CalendarHijriNum" android:text="1" />
            </LinearLayout>

            <LinearLayout style="@style/CalendarDateContainer">
                <View
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_button"
                    android:backgroundTint="#33FFFFFF" />
                <TextView style="@style/CalendarDateNum"
                    android:layout_marginTop="-32dp"
                    android:text="02" />
                <TextView style="@style/CalendarHijriNum" android:text="1" />
            </LinearLayout>

            <LinearLayout style="@style/CalendarDateContainer">
                <TextView style="@style/CalendarDateNum" android:text="03" />
                <TextView style="@style/CalendarHijriNum" android:text="1" />
            </LinearLayout>

            <LinearLayout style="@style/CalendarDateContainer">
                <TextView style="@style/CalendarDateNum" android:text="04" />
                <TextView style="@style/CalendarHijriNum" android:text="1" />
            </LinearLayout>

            <LinearLayout style="@style/CalendarDateContainer">
                <TextView style="@style/CalendarDateNum" android:text="05" />
                <TextView style="@style/CalendarHijriNum" android:text="1" />
            </LinearLayout>
            <LinearLayout style="@style/CalendarDateContainer">
                <TextView style="@style/CalendarDateNum" android:text="06" />
                <TextView style="@style/CalendarHijriNum" android:text="1" />
            </LinearLayout>
            <LinearLayout style="@style/CalendarDateContainer">
                <TextView style="@style/CalendarDateNum" android:text="07" />
                <TextView style="@style/CalendarHijriNum" android:text="1" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>