<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.arahkiblat.KiblatActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/toolbarColor"
        app:title="Qibla Compass"
        app:titleTextColor="@color/textToolbarColor"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/locationContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= QIBLA ANGLE ================= -->
    <LinearLayout
        android:id="@+id/qiblaAngleContainer"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/bg_qibla_angle"
        android:elevation="6dp"
        app:layout_constraintBottom_toTopOf="@id/locationContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Label statis -->
        <TextView
            android:id="@+id/txtQiblaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qibla Angle :"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <!-- Nilai dinamis -->
        <TextView
            android:id="@+id/txtQiblaValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="294Â°"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/locationContainer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_location"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location_kiblat"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="Kecamatan Sukomanunggal, Indonesia"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>